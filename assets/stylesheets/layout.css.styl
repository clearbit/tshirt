@import './mixins'

body {
  padding: 97px 0 0 0
}

.index-banner {
  position: fixed
  top: 0
  left: 0
  right: 0
  background-color: #ee6e73;
  z-index: 500

  .header {
    color: #FFF;
  }

  h1 {
    margin: 0
    font-size: 40px
  }

  h4 {
    margin-bottom: 15px;
  }

  .row {
    margin: 0
  }

  .btn-large {
    margin: 5px 0 0 0

    &:disabled, .disabled {
      background: #DFDFDF !important
      color: #9F9F9F !important
    }

    .preloader-wrapper {
      margin: 8px
    }
  }
}

.header {
  color: #ee6e73;
  font-weight: 300;
}

.select-wrapper {
  position: relative;
  margin-top: 10px;
}

.select-field {
  position: relative
}

.sep {
  margin: 40px 0 25px 0
}

.row-divider {
  border-bottom: 1px solid #e0e0e0
}

a {
  cursor: pointer
}

.pushpin-rhc {
  .blank-card {
    margin: 25px 0 0 0

    a {
      font-size: 18px
      display: block
      transition: color 0.3s ease;
      text-transform: uppercase;
    }
  }
}

.tooltipped.info {
  position: absolute
  top: 0
  right: 10px
}

input:disabled {
  border-bottom: none
}
